<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_margin="5dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:layout_weight="1"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="5dp"
        android:background="#fff"
        android:onClick="HealthAndCare"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/AdsImage"
            android:layout_height="140dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="5dp"

            android:src="@drawable/imageplaceholder"/>
            <ImageView
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:id="@+id/rent_sell_tag"
                android:src="@drawable/rent_tag"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/AdsImage"
            android:text="Title of Add"
            android:textSize="18dp"
            android:id="@+id/AdTitle"
            android:layout_margin="5dp"

            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs.1000"
                android:textColor="#000"
                android:id="@+id/AdsPrice"
                android:layout_below="@+id/AdTitle"
                android:layout_marginLeft="5dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:background="#ff219aff"
                android:textColor="#fff"
                android:id="@+id/AdsCategory"
                android:layout_below="@+id/AdsPrice"
                android:layout_marginLeft="5dp"
                android:layout_margin="5dp"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="#00ffffff"
                android:id="@+id/ButtonLayer"
                android:layout_alignBottom="@+id/AdsCategory"
                android:layout_alignParentTop="true" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>



</RelativeLayout>