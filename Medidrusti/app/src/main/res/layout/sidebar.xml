<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_light">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rel"
        android:background="#fff"
       >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:scaleType="centerCrop"
            android:id="@+id/material"
            android:src="@drawable/material"/>


        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:id="@+id/manface"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:src="@drawable/manimage"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/manface"
              android:layout_centerHorizontal="true"
                android:textSize="22dp"
                android:id="@+id/username"
                android:textColor="#ffffff"
                android:text="Name Of person"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/usermobile"
                android:layout_marginTop="5dp"
                android:textSize="17dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/username"
                android:textColor="#f4dbdbdb"
                android:text="99775452747"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
          android:layout_below="@+id/material"
            android:weightSum="5"
            android:orientation="vertical">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Share App"
                    android:onClick="ShareApp"
                    android:textColor="#000"
                    android:background="#00ffffff"
                    android:layout_weight="1"
                    />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Bookmark"
                android:onClick="bookmark"
                android:textColor="#000"
                android:background="#00ffffff"
                android:layout_weight="1"
                />


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Advertise with us"
                    android:background="#00ffffff"
                    android:textColor="#000"
                    android:onClick="ContactUs"
                    android:layout_weight="1"
                    />


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="About Us"
                    android:onClick="AboutUs"
                    android:background="#00ffffff"
                    android:textColor="#000"
                    android:layout_weight="1"
                    />


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Connect Us With Socal Media"
                    android:background="#00ffffff"
                    android:textColor="#000"
                    android:onClick="socialmedia"
                    android:layout_weight="1"
                    />


        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>