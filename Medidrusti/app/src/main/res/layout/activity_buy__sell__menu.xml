<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <TextView
        android:text="Explore By Category"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textColor="#000"
        android:id="@+id/SampleText"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"

                android:id="@+id/Layout1"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/SampleText">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_weight="1">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:padding="7dp"
                    android:src="@drawable/iphone"
                    android:id="@+id/Electronics"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Electronics"
                        android:text="Electronics"
                        android:textSize="13dp"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="3dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:padding="7dp"
                        android:src="@drawable/motorbiking"
                        android:id="@+id/Car_Bikes"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Car_Bikes"
                        android:text="Car-Bikes"
                        android:textSize="13dp"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="3dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:src="@drawable/home"
                        android:padding="7dp"
                        android:id="@+id/House"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/House"
                        android:text="House"
                        android:textSize="13dp"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="3dp"/>
                </RelativeLayout>
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:id="@+id/Layout2"

                android:layout_marginTop="10dp"
                android:layout_below="@+id/Layout1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:padding="7dp"
                        android:src="@drawable/books"
                        android:id="@+id/Books_Stationery"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Books_Stationery"
                        android:text="Books"
                        android:textSize="13dp"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="3dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:padding="7dp"
                        android:src="@drawable/harvest"
                        android:id="@+id/Farmer"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Farmer"
                        android:text="Farmer"
                        android:textSize="13dp"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="3dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:src="@drawable/desk"
                        android:padding="7dp"
                        android:id="@+id/Furniture"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Furniture"
                        android:text="Furniture"
                        android:textSize="13dp"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="3dp"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>




</RelativeLayout>
