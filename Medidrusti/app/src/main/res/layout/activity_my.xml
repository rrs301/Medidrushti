<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MyActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#35aa82"
        android:id="@+id/actionbatop"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:onClick="home"
            android:src="@drawable/menu_button"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MediDrushti"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="27dp"
            android:textColor="#fff"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/actionbatop"
        android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <view
                android:id="@+id/recycler_view_slider"
                class="android.support.v7.widget.RecyclerView"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:orientation="horizontal"
                android:layout_marginRight="7dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="4dp"

                />
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="8"
                android:layout_marginTop="2dp"
                android:id="@+id/mainLiner"
                android:background="#41D4A1"
                android:layout_below="@+id/recycler_view_slider"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    >
                    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:elevation="2dp"
                        android:layout_weight="1"

                        card_view:cardCornerRadius="4dp"
                        card_view:cardElevation="1dp"
                        android:background="#34AA81"
                        android:onClick="Doctor"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:background="#34AA81"
                            android:onClick="Doctor"
                            android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/image1"
                            android:padding="12dp"
                            android:layout_marginBottom="15dp"
                            android:src="@drawable/surgeon"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Doctor"
                            android:layout_marginBottom="3dp"
                            android:textSize="20dp"
                            android:textColor="#fff"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center|bottom"/>
                        </RelativeLayout>

                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/cat4"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:elevation="2dp"
                        android:layout_weight="1"
                        card_view:cardCornerRadius="4dp"
                        card_view:cardElevation="1dp"
                        android:onClick="Specilist"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:background="#34AA81"
                            android:onClick="Specilist"
                            android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="15dp"
                            android:src="@drawable/cardiogram"
                            android:padding="12dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Specilist"
                            android:textSize="20dp"
                            android:textColor="#fff"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="3dp"

                            android:layout_gravity="center|bottom"/>
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    >
                    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view2"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:elevation="2dp"
                        android:layout_weight="1"

                        card_view:cardCornerRadius="4dp"
                        card_view:cardElevation="1dp"
                        android:background="#34AA81"
                        android:onClick="Event"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:background="#34AA81"
                            android:onClick="Event"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/image3"
                                android:padding="12dp"
                                android:layout_marginBottom="15dp"
                                android:src="@drawable/calendar"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Event"
                                android:layout_marginBottom="3dp"
                                android:textSize="20dp"
                                android:textColor="#fff"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center|bottom"/>
                        </RelativeLayout>

                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/cat3"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:elevation="2dp"
                        android:layout_weight="1"
                        card_view:cardCornerRadius="4dp"
                        card_view:cardElevation="1dp"
                        android:onClick="Tips"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:background="#34AA81"
                            android:onClick="Tips"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="15dp"
                                android:src="@drawable/checklist"
                                android:padding="12dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tips"
                                android:textSize="20dp"
                                android:textColor="#fff"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="3dp"

                                android:layout_gravity="center|bottom"/>
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>




                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:id="@+id/emergency__layout"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/emergency_txt"
                android:layout_weight="1"
                >
                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/Ambulance"
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:elevation="2dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:onClick="AmbulanceCall"
                    card_view:cardCornerRadius="4dp"
                    card_view:cardElevation="1dp"

                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:background="#35aa82"
                        android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="15dp"
                        android:src="@drawable/ambulance"
                        android:onClick="AmbulanceCall"

                        android:padding="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ambulance"
                        android:layout_marginBottom="3dp"
                        android:textSize="12dp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center|bottom"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/police"
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:elevation="2dp"
                    android:layout_weight="1"
                    card_view:cardCornerRadius="4dp"
                    card_view:cardElevation="1dp"
                    android:onClick="PoliceCall"

                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:background="#35aa82"
                        android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="15dp"
                        android:src="@drawable/polic_car"
                        android:onClick="PoliceCall"

                        android:padding="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Police"
                        android:layout_marginBottom="3dp"
                        android:textSize="12dp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center|bottom"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/Fire_Services"
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:elevation="2dp"
                    android:layout_weight="1"
                    android:onClick="FireCall"
                    android:layout_marginRight="8dp"
                    card_view:cardCornerRadius="4dp"
                    card_view:cardElevation="1dp"

                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:background="#35aa82"
                        android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="15dp"
                        android:src="@drawable/fire"
                        android:onClick="FireCall"

                        android:padding="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fire-Bigrade"
                        android:layout_marginBottom="3dp"
                        android:textSize="12dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center|bottom"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    </RelativeLayout>
