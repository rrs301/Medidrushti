<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_margin="1.5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="2dp"
            android:layout_weight="1"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="1dp"
            android:background="#fff"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/AdsImage"
                    android:layout_height="230dp"
                    android:layout_gravity="center_vertical"
                    android:background="#000"

                    android:src="@drawable/imageplaceholder"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/AdsImage"
                    android:text="Title Of Post"
                    android:id="@+id/AdTitle"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="24dp"
                    android:textSize="23dp"
                    android:textColor="#000"
                    />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Rs.5000"
               android:layout_marginLeft="15dp"
               android:layout_marginTop="10dp"
               android:textSize="20dp"
               android:textStyle="bold"
               android:layout_below="@+id/AdTitle"
               android:id="@+id/AdsPrice"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/AdTitle"
                    android:layout_alignParentRight="true"
                    android:text="Category"
                    android:textSize="14dp"
                    android:id="@+id/AdsCategory"
                    android:padding="2dp"
                    android:background="#ff219aff"
                    android:layout_marginTop="10dp"
                    android:textColor="#fff"
                    android:layout_marginRight="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:layout_below="@+id/AdsPrice"
                    android:text="Address Of Seller"
                    android:textColor="#ff399c6b"
                    android:textSize="17dp"
                    android:id="@+id/AdsAddressText"
                    android:layout_marginTop="15dp"

                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address Of Post Is here"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/AdsAddress"

                    android:layout_below="@+id/AdsAddressText"
                    android:layout_toLeftOf="@+id/button"
                    android:layout_toStartOf="@+id/button" />

                <View
                    android:id="@+id/SplitLine_hor1"
                    android:layout_width="match_parent"
                    android:layout_height= "0.3dp"
                    android:layout_below="@+id/AdsAddress"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:background="#ffababab" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone:"
                    android:textColor="#000"
                    android:id="@+id/AdsPhone"
                    android:layout_below="@+id/SplitLine_hor1"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="20dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Get On Map"
                    android:textSize="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:textColor="#fff"
                    android:onClick="GetMap"
                    android:background="#ff47c788"
                    android:layout_alignParentRight="true"
                   android:layout_above="@id/SplitLine_hor1"
                    android:id="@+id/button" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:id="@+id/AdsUserName"
                    android:layout_below="@+id/AdsPhone"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="2dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Call"
                    android:textSize="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:textColor="#fff"
                    android:onClick="Call"
                    android:background="#ff47c788"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/SplitLine_hor1"/>
                <View
                    android:id="@+id/SplitLine_hor2"
                    android:layout_width="match_parent"
                    android:layout_height= "0.3dp"
                    android:layout_below="@+id/AdsPhone"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:background="#ffababab"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/SplitLine_hor2"
                    android:text="Item Description"
                    android:textColor="#ff399c6b"
                    android:textSize="17dp"
                    android:id="@+id/AdsDescriptionText"
                    android:layout_marginTop="15dp"

                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/AdsDescriptionText"
                    android:text="Service Provided"
                    android:textColor="#ff9f9f9f"
                    android:id="@+id/AdsDescription"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"/>
                <View
                    android:id="@+id/SplitLine_hor3"
                    android:layout_width="match_parent"
                    android:layout_height= "0.3dp"
                    android:layout_below="@+id/AdsDescription"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:background="#ffababab"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/SplitLine_hor3"
                    android:text="About Us"
                    android:textSize="17dp"
                    android:textColor="#ffffff"
                    android:id="@+id/PostAboutusText"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/PostAboutusText"
                    android:text="About Us"
                    android:id="@+id/PostAboutus"
                    android:textColor="#ffffff"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </ScrollView>

</RelativeLayout>